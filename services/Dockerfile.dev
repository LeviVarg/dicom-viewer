# services/Dockerfile.dev
FROM golang:1.25-alpine

# Install air (the hot-reloading utility)
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Copy dependency files for caching
COPY go.mod go.sum ./
RUN go mod download

# Expose the API port
EXPOSE 8081

# Command to run air, which watches files and restarts the app
CMD ["air", "-c", ".air.toml"]
